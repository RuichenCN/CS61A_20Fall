def falling(n, k):
    if k == 0:
        return 1
    elif k == 1:
        return n
    else:
        m = n
        while k > 1:
            m *= (n-1)
            n = n -1
            k -= 1
        return m



def sum_digits(y):
    sum = 0
    while y > 9:
        sum += y % 10
        y = y // 10
    return sum + y

